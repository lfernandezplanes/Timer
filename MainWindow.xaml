<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timer" Height="171" Width="244">
    <StackPanel>
        <Button Click="Start_Click">Start</Button>
        <Button Click="Pause_Click">Pause</Button>
        <Button Click="Stop_Click">Stop</Button>
        <Label  x:Name="lblTime" Height="36" Width="219" FontWeight="Bold" FontSize="20"/>
    </StackPanel>
</Window>
